                                        </div><br>
                                        <label for="" class="pull-left" id="passwordLabelId"></label>
                                        <div class="input-group password-group password">
                                                <input id="login-password" type="password"  class="form-control inputbg passwordTextBox" name="password" placeholder="Wachtwoord">
                                        </div><br>
                                        <div class="loginButtonContainer">
                                                <input type="submit" value="Login" class="btn-primary" id="loginSubmitid">
                                                <button onClick="forgetPassword()" type="button" class="btn-primary" id="forgetpasswordId"></button>
                                                <button onclick="gotoRegistrationRequestPage()" type="button" class="btn-primary" id="registerButtonId"></button>
                                        </div>
                                        <br>
                                        <div class="alert-danger">
                                                <%= error %>  
                                                <% if(error===''){ %>
                                                <div class="input-group">
                                                        <a href="linkTo:/contactus"></a> <a href="/contact">Contact us</a>
                                                </div>
                                                <%}%>
                                        </div>
                                        <br>
                                </form>
                        </div>
                </div>
        </div>
</div>

