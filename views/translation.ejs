                }
            }
            objSearchedWords.word=response.data[key1].word;
            objSearchedWords.translatedWord=response.data[key1].translatedWord;
            arrayOfSearchedWords.push(objSearchedWords)
        }
        for(key in arrayOfSearchedWords){
            searchedWords.innerHTML+=`
